@model RestaurantOrderProcessing.WebUI.Models.RegisterViewModel

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel">
    <div class="panel-heading">
        <h3>Register system:</h3>
    </div>
    <div class="panel-body">
        <p class="lead">Please login to access the admin panel:</p>
        @using (Html.BeginForm("Register", "Account", new { Model }))
        {

            @Html.ValidationSummary()
            <div class="form-group">
                <label>Email:</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Password:</label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Confirm Password:</label>
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Register as admin:</label>
                @Html.CheckBoxFor(m => m.AsAdmin)
            </div>
            <label>Confirm Password:</label>
                <input type="submit" value="Enter" class="btn btn-primary"/>
                }
            </div>
</div>



