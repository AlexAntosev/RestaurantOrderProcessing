@model RestaurantOrderProcessing.Domain.Entities.ShippingDetails

@{
    ViewBag.Title = "CheckoutOrder";
}

<h2>CheckoutOrder</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary();
    <h3>Data</h3>
    <div class="form-group">
        <h4>Card number:</h4>
        @Html.TextBoxFor(x => x.CardNumber, new { @class = "form-control" })
    </div>
    
    <div class="form-group">
        <label>Month:</label>
        @Html.TextBoxFor(x => x.Month, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Year:</label>
        @Html.TextBoxFor(x => x.Year, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>CVC:</label>
        @Html.TextBoxFor(x => x.Cvc, new { @class = "form-control" })
    </div>

    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Submit order" />
    </div>
}